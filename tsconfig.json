{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"outDir": "./dist",
		"rootDir": ".",
		"preserveSymlinks": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "my-app", "scaffold", "final-test", "test-functionality"]
}
	